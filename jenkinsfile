pipeline {
    agent any
    
    environment {
        // Define the Node.js installation configured in Jenkins
        NODEJS_HOME = tool 'Node.js'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your source code from version control
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js dependencies using npm
                sh 'npm install'
            }
        }

        stage('Run Unit Tests') {
            steps {
                // Run unit tests using npm test (customize as needed)
                sh 'npm test'
            }
        }

        stage('Run SonarQube Analysis') {
            steps {
                // Run SonarQube analysis
                withSonarQubeEnv('Your_SonarQube_Environment_Name') {
                    sh 'npm run sonar-scanner'
                }
            }
        }

        stage('Deploy') {
            steps {
                // Add deployment steps if needed
                // e.g., deploying to a server, pushing to a registry, etc.
            }
        }
    }

    post {
        success {
            // Actions to be taken if the pipeline is successful
            echo 'Pipeline successful!'
        }
        failure {
            // Actions to be taken if the pipeline fails
            echo 'Pipeline failed!'
        }
    }
}
